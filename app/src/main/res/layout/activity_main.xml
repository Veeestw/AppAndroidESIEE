<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:layout_above="@id/buttons_layout"
        android:id="@+id/afficheur_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="42sp"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="textEnd"
            android:id="@+id/afficheur_calcul">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="62sp"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="textEnd"
            android:layout_above="@id/buttons_layout"
            android:id="@+id/afficheur_resultat">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Rangée 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                style="@style/CalculatorButton.Function"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_parentheseG"
                style="@style/CalculatorButton.Function"
                android:text="(" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_parentheseD"
                style="@style/CalculatorButton.Function"
                android:text=")" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_div"
                style="@style/CalculatorButton.Operator"
                android:text="/" />
        </LinearLayout>

        <!-- Rangée 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/CalculatorButton.Digit"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/CalculatorButton.Digit"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/CalculatorButton.Digit"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mult"
                style="@style/CalculatorButton.Operator"
                android:text="×" />
        </LinearLayout>

        <!-- Rangée 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/CalculatorButton.Digit"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/CalculatorButton.Digit"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/CalculatorButton.Digit"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sous"
                style="@style/CalculatorButton.Operator"
                android:text="-" />
        </LinearLayout>

        <!-- Rangée 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/CalculatorButton.Digit"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/CalculatorButton.Digit"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/CalculatorButton.Digit"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                style="@style/CalculatorButton.Operator"
                android:text="+" />
        </LinearLayout>

        <!-- Rangée 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/CalculatorButton.Digit"
                android:layout_weight="2.05"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_point"
                style="@style/CalculatorButton.Digit"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_retour"
                style="@style/CalculatorButton.Digit"
                app:icon="@drawable/outline_arrow_back_24"
                app:iconSize="35dp"
                app:iconTint="?attr/colorOnSurface"
                android:text=""
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:iconGravity="textStart"
                 />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_egal"
                style="@style/CalculatorButton.Operator"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

