<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8C8C8"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:layout_above="@id/buttons_layout"
        android:id="@+id/afficheur_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="42sp"
            android:textAlignment="textEnd"
            android:id="@+id/afficheur_calcul">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="62sp"
            android:textAlignment="textEnd"
            android:layout_above="@id/buttons_layout"
            android:id="@+id/afficheur_resultat">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp"
        android:id="@+id/buttons_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:backgroundTint="#9E0A0A"
            android:layout_margin="3dp"
            android:id="@+id/button_C"
            android:text="C"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_parentheseG"
            android:text="("
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_parentheseD"
            android:text=")"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_div"
            android:text="/"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_7"
            android:text="7"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_8"
            android:text="8"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_9"
            android:text="9"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_mult"
            android:text="Ã—"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_4"
            android:text="4"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_margin="3dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_6"
            android:text="6"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_sous"
            android:text="-"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_1"
            android:text="1"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_2"
            android:text="2"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_3"
            android:text="3"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_add"
            android:text="+"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_0"
            android:text="0"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_point"
            android:text="."
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text=" "
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_retour"
            app:icon="@drawable/outline_arrow_back_24"
            app:iconGravity="textEnd"
            app:iconSize="36dp"
            app:iconPadding="0dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/button_egal"
            android:text="="
            />

    </LinearLayout>


</LinearLayout>

</RelativeLayout>

