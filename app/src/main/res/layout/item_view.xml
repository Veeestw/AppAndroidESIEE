<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Le bouton poubelle, seul en haut à droite -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Suppbtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            app:icon="@drawable/icone_poubelle"
            app:iconSize="25dp"
            app:iconTint="@color/accent_red_error"/>

        <!-- Conteneur pour le Titre et la Description -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/Suppbtn">

            <TextView
                android:id="@+id/TitleOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Titre de la note"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DescriptionOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Description longue qui devrait maintenant passer à la ligne correctement sans aller sous la poubelle"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- La Date, seule en bas à droite -->
        <TextView
            android:id="@+id/DateOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_container"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="02/11/2025"
            android:textColor="@color/dark_text_secondary"
            android:textSize="15sp" />

    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>
    