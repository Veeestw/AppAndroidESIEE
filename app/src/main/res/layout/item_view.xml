<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TitleOutput"
        android:text="My title"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DescriptionOutput"
        android:layout_below="@+id/TitleOutput"
        android:text="My long long long long description"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DateOutput"
        android:text="30/03/2003"
        android:textColor="@color/black"
        android:gravity="end"
        android:textSize="15sp"
        android:layout_below="@+id/DescriptionOutput"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/Suppbtn"
        android:backgroundTint="#7C7E79"
        app:icon="@drawable/icone_poubelle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        android:padding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:cornerRadius="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>